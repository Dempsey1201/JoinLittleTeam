    <select id="login" resultType="teacher">
        SELECT *
        FROM t_teacher
        WHERE card=#{user.card} and password=#{user.password}
    </select>

    <insert id="addUser">
        INSERT INTO t_teacher
        (username,card,password,college,join_time)
        VALUES (#{user.username},#{user.card},#{user.password},#{user.college},#{user.join_time})
    </insert>

    <select id="listUser" resultType="user">
        SELECT *
        FROM t_teacher
    </select>

    <update id="updateUser">
        UPDATE t_teacher
        SET phone=#{user.phone},email=#{user.email},password=#{user.password},join_time=#{user.join_time}
        WHERE id=#{user.id}
    </update>

    <update id="updatePassword">
        UPDATE t_teacher
        SET password=#{teacher.password}
        WHERE id=#{teacher.id}
    </update>

    <delete id="deleteTeacher">
        DELETE FROM t_teacher
        WHERE card=#{card}
    </delete>

    <update id="uploadHead">
        UPDATE t_teacher
        SET headUrl=#{headUrl},path=#{path}
        WHERE id=#{id}
    </update>

