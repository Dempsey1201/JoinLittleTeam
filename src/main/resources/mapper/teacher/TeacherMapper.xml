    <select id="login" resultType="teacher">
        SELECT *
        FROM t_teacher
        WHERE card=#{teacher.card} and password=#{teacher.password}
    </select>

    <insert id="addTeacher">
        INSERT INTO t_teacher
        (teachername,card,password,college,sex,email,headUrl,path)
        VALUES (#{teacher.teachername},#{teacher.card},#{teacher.password},#{teacher.college},#{teacher.sex},#{teacher.email},#{teacher.headUrl},#{teacher.path})
    </insert>

    <select id="listTeacher" resultType="teacher">
        SELECT *
        FROM t_teacher
    </select>

    <update id="updateTeacher">
        UPDATE t_teacher
        SET teachername=#{teacher.teachername},email=#{teacher.email},college=#{teacher.college}
        WHERE id=#{teacher.id}
    </update>

    <update id="updatePassword">
        UPDATE t_teacher
        SET password=#{teacher.password}
        WHERE id=#{teacher.id}
    </update>

    <delete id="deleteTeacher">
        DELETE FROM t_teacher
        WHERE id=#{id}
    </delete>

    <update id="uploadHead">
        UPDATE t_teacher
        SET headUrl=#{headUrl},path=#{path}
        WHERE id=#{id}
    </update>

